<div id="users">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Signed up</th>
          <th>Receive Newsletter</th>
          <th>Verified Status</th>
          <th>Verification</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.profile.name  %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= user.profile.try(:receive_newletter) %></td>
          <td><%= user.verification_status %></td>
          <td>
            <% if user.verification_status === 'pendingVerification' %>
              <%= link_to 'Verify', user_path(@user, user: {verification_status: 'verified'}), method: :put, class: 'btn' %></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
