<div class="small-container container">

  <h1 class="center-align">Sign In</h1>

  <%= form_for :session, url: sessions_path, html: { class: 'one-page-form' } do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= submit_tag "Sign In", class: 'btn' %>
        <%= link_to "Sign Up", new_user_path, class: "btn transparent" %>
      </div>
    </div>
  <% end %>

</div>
