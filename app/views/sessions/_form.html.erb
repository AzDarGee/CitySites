
<%= form_tag sessions_path do %>
  <fieldset>
    <legend><h1>Sign In</h1></legend>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], placeholder: "Email" %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Log in", class: 'button' %>
    </div>
  </fieldset>
<% end %>

