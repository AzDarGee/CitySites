<%= form_for @dev_site, html: { multipart: true } do |f| %>
  <% if @dev_site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dev_site.errors.count, "error") %> prohibited this dev_site from being saved:</h2>

      <ul>
      <% @dev_site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :devID %><br>
    <%= f.text_field :devID %>
  </div>
  <div class="field">
    <%= f.label :application_type %><br>
    <%= f.text_field :application_type %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>
    <%= f.hidden_field :images_cache %>
  </div>

  <div class="field">
    <%= f.label :files %>
    <%= f.file_field :files, multiple: true %>
    <%= f.hidden_field :files_cache %>
  </div>

  <h4>Addresses</h4>
  <div class="field">
    <% f.fields_for :addresses do |address| %>
      <%= render 'address_fields', :f => address %>
    <% end %>
    <%= link_to_add_association 'add address', f, :addresses %>
  </div>

  <h4>Statuses</h4>
  <div class="field">
    <% f.fields_for :statuses do |status| %>
      <%= render 'status_fields', :f => status %>
    <% end %>
    <%= link_to_add_association 'add status', f, :statuses %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :ward_name %><br>
    <%= f.text_field :ward_name %>
  </div>
  <div class="field">
    <%= f.label :ward_num %><br>
    <%= f.number_field :ward_num %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
