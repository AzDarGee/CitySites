{{#empty_array this}}
  <div class="dev-site">
    <div class="title">
      No events found
    </div>
  </div>
{{/empty_array}}

{{#each this}}

  <div class="dev-site" id="dev-site-{{this.id}}">

  <div class="title">
    {{#check_existence this.location}}{{/check_existence}}
  </div>

  <div>
    <a href="/{{../LOCALE}}/events/{{this.id}}">
    <img src="{{this.image_url}}" class="display-image">
    </a>
  </div>

  <div class="cat-label">{{#check_existence this.title}}{{/check_existence}}</div>

  <div class="row info">

    <div class="col s12 label">Description:</div>
    <div class="col s12">{{this.description}}</div>

    <div class="col s6 label">When:</div>
    <div class="col s6">{{this.date}}, {{this.time}}</div>

    <div class="col s6 label">Contact:</div>
    <div class="col s6">{{this.contact_email}} <br/> {{this.contact_tel}}</div>

  </div>

  <a href="/{{../LOCALE}}/events/{{this.id}}" class="waves-effect waves-light btn">View Event</a>
  </div>

{{/each}}
